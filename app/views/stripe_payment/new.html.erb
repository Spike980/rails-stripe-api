<%= image_tag "stripe.png", alt: "stripe logo", height: "75px", width: "75px", id: "stripe-logo" %>
<h2>Stripe Payment</h2>
<div class=".payment-errors"></div>

<div class="container col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
<div class="panel panel-info">
     <div class="panel-body">
        <%= form_tag("/pay", method: "post", id: "stripe-form", class: "form") do %> 
            <div class="form-group">
                <%= label_tag(:creditnum, "Card Number") %>
                <%= text_field_tag(:creditnum, nil, :class => "credit-number form-control", autocomplete: "off", size: 20) %>
            </div>
         
            <div class="form-group">
                <%= label_tag(:creditsec, "Security/CVC") %>
                <%= text_field_tag(:creditsec, nil, class: "credit-security form-control", autocomplete: "off", size: 4) %>
            </div>
         
            <div class="form-group">
                <%= label_tag(:creditmonth, "Expiration (MM/YYYY)") %>
                <%= text_field_tag(:creditmonth, nil, class: "card-expiry-month form-control", size: 2) %>
                <span> / </span>
                <%= text_field_tag(:credityear, nil, class: "card-expiry-year form-control", size: 4) %>
            </div>
         
            <div class="text-center">
                <%= submit_tag("Submit Payment", class: "btn btn-primary submit tex") %>
            </div>
        <% end %>
     </div>
</div> 
</div>
